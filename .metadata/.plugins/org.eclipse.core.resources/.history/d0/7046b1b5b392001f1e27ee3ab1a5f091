public class Ghost {
    private int x, y; // 위치

    public Ghost(int startX, int startY) {
        this.x = startX;
        this.y = startY;
    }

    public void move() {
        // 유령 이동 로직 추가
    }

    public int getX() {
        return x;
    }

    public int getY() {
        return y;
    }
}
